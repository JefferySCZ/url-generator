<form action='/' method='POST'>
  <div class='mt-5 mb-3'>
    <input
      type='url'
      class='form-control'
      id='url'
      name='url'
      placeholder='Please key in website link'
      value={{url}}
    >
  </div>
  <div class='text-center mt-4 mb-5'>
    {{#if shortURL}}
      <div class='alert alert-warning' role='alert'>
        <span class='mr-2 fs-5'>Your Url has been shorten: </span><code
          class='fs-3'
        > {{origin}}/{{shortURL}}</code>
      </div>

    {{/if}}
    <button
      type='submit'
      class='btn btn-primary col-8 col-sm-6 col-md-5 col-lg-4'
    >Let shorten it !</button>
  </div>
</form>